<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="utf-8">
    	<!--meta http-equiv="X-UA-Compatible" content="IE=edge"-->
    	<meta name="viewport" content="width=device-width, initial-scale=1">

    	<title>Code.Server - Result view</title>

		<!-- CSS -->
		<link href="/static/css/codesearcher-result.css" rel="stylesheet">
		<link href="/static/css/bootstrap.min.css" rel="stylesheet">
    	<link href="/static/css/bootstrap-theme.min.css" rel="stylesheet">
		
	</head>

	<body>
		<h3>Search Results</h3> <br />

		<button type="button" class="btn btn-default" aria-label="Left Align" onclick="location.href='/'">
			<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
		</button>
		<br /> <br />

		<h3><span class="label label-primary"># Files with Hits<span class="badge">@Model.NumberOfHits</span></span></h3>
		
		<div class="panel panel-success">
			@foreach (var item in @Model.Results)
			{
				<div class="result-group">
			  		<div class="panel-heading">
			    		<h3 class="panel-title">@item.FilePath</h3>
						<span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
			  		</div>
			  		<div class="panel-body">
			    		<table class="table">
							<colgroup>
						       <col span="1" style="width: 10%;">
						       <col span="1" style="width: 90%;">
						    </colgroup>	
							<thead>
						      <tr>
						        <th>Linenumber</th>
						        <th>Text</th>
						      </tr>
						    </thead>
							<tbody>
							@foreach(var line in @item.Lines)
							{
						       <tr>
						         <td>@line.LineNumber</td>
						         <td>@line.Text</td>
							   </tr>
							 }
							</tbody>
						</table>
			  		</div>
				</div>
		  	}
		</div>


		
		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<script src="/static/js/jquery-3.1.0.min.js"> </script>

		<!-- we are using Bootstrap as UI library -->
		<script src="/static/js/bootstrap.min.js"> </script>

		<!-- our own code -->
		<script src="/static/js/codesearcher-result.js"> </script>
	</body>
</html>
